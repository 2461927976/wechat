.title{
  margin-top: 20rpx;
  position: relative;
  height: 80rpx;
}
.spend{
  display: block;
	width: 228rpx;
	height: 60rpx;
	background-color: #538afe;
	border-radius: 30rpx;
  text-align: center;
  position: absolute;
  z-index: 2;
  left: 75%;
  transform: translateX(-87%);
}
.spend text{
	font-family: PingFang-SC-Medium;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 27rpx;
	letter-spacing: 0px;
	color: #ffffff;
}
.receive{
  display: block;
	width: 435rpx;
	height: 60rpx;
	background-color: #f5f5f5;
	border-radius: 30rpx;
	border: solid 1rpx #ececec;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.receive text{
	font-family: PingFang-SC-Medium;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 27rpx;
	letter-spacing: 0px;
	color: #999999;
  position: absolute;
  left: 25%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.hr{
  clear: both;
  overflow: hidden;
  height: 5rpx;
  background-color: #f5f5f5;
}

.alldetail{
  margin-top: 36rpx;
  margin-left: 27rpx;
}
.detail{
	width: 700rpx;
  height: 106rpx;
	background-color: #ffffff;
	box-shadow: 0px 1rpx 13rpx 0px rgba(185, 185, 185, 0.27);
	border-radius: 15rpx;
  position: relative;
}
.detail image{
  width: 68rpx;
  height: 68rpx;
  padding: 19rpx 0 19rpx 18rpx;
}
.foodcont{
  margin-left: 25rpx;
}
.foodcont .class{
	font-family: PingFang-SC-Medium;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 27rpx;
	letter-spacing: 0px;
	color: #333333;
  position: absolute;
  top: 40rpx;
}
.foodcont .Fdetail{
	font-family: PingFang-SC-Medium;
	font-size: 18rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 27rpx;
	letter-spacing: 0px;
	color: #999999;
  position: absolute;
  top: 60rpx;
}
.alldetail .Fmoney{
	font-family: PingFang-SC-Medium;
	font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 27rpx;
	letter-spacing: 0px;
	color: #333333;
  position: absolute;
  right: 34rpx;
  top: 41rpx;
}