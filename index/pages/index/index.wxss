.header{
  border-left: 2px solid limegreen;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  padding: 0 10rpx;
  margin: 10rpx 0;
}
.text-all{
  color: green;
  font-size: 10px;
}
.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.content-item{
  height: 250rpx;
  width: 45%;
  background-color: goldenrod;
  margin: 5px;
  position: relative;
}
.content-item image{
  width: 100%;
  height: 100%;
}
.content-item-text{
  position: absolute;
  bottom: 0px;
  color: #fff;
  font-size: 10px;
  background: -webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.8),rgba(0, 0, 0, 0));
  height: 125rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  text-align: center;
  padding-bottom: 1%;
}
.list-item{
  height: 500rpx;
  width: 100%;
}
.list-item-images{
  height: 300rpx;
  width: 100%;
  position: relative;
}
.list-item-images-img{
  height: 100%;
  width: 100%;
}
.list-item-text{
  height: 200rpx;
  width: 100%;
  margin-top: 20rpx;
  padding: 0 10rpx;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  border-radius: 50%;
  top: 250rpx;
  right: 50rpx;
}
.list-content{
  font-size: 10px;
  color: #999;
  margin-top: 20rpx;
}
.selection{
  border-bottom: 5px solid #ddd;
}