      <view wx:if="{{tag12}}" class="normal-tag" catchtap="onTagTap12">数据库管理</view>
      <view wx:else class="checked-tag" catchtap="onTagTap12">数据库管理</view>
      <view wx:if="{{tag13}}" class="normal-tag" catchtap="onTagTap13">前端</view>
      <view wx:else class="checked-tag" catchtap="onTagTap13">前端</view>
      <view wx:if="{{tag14}}" class="normal-tag" catchtap="onTagTap14">硬件开发</view>
      <view wx:else class="checked-tag" catchtap="onTagTap14">硬件开发</view>
    </view>
    <view class="choose-next">
      <button type="default" disabled="{{disabled}}" hover-class="none">下一步</button>
    </view>
  </view>
</view>