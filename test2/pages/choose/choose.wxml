      <view wx:else class="checked-tag" catchtap="onTagTap4">算法</view>
      <view wx:if="{{tag5}}" class="normal-tag" catchtap="onTagTap5">Android</view>
      <view wx:else class="checked-tag" catchtap="onTagTap5">Android</view>
      <view wx:if="{{tag6}}" class="normal-tag" catchtap="onTagTap6">人工智能</view>
      <view wx:else class="checked-tag" catchtap="onTagTap6">人工智能</view>
      <view wx:if="{{tag7}}" class="normal-tag" catchtap="onTagTap7">安全</view>
      <view wx:else class="checked-tag" catchtap="onTagTap7">安全</view>
      <view wx:if="{{tag8}}" class="normal-tag" catchtap="onTagTap8">产品/运营</view>
      <view wx:else class="checked-tag" catchtap="onTagTap8">产品/运营</view>
      <view wx:if="{{tag9}}" class="normal-tag" catchtap="onTagTap9">大数据</view>
      <view wx:else class="checked-tag" catchtap="onTagTap9">大数据</view>
      <view wx:if="{{tag10}}" class="normal-tag" catchtap="onTagTap10">ios</view>
